{
  "manifest_version": 3,
  "name": "Hattrick Matchview",
  "version": "1.0.0",
  "description": "A visualization layer for following matches of the online game Hattrick",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "https://www.hattrick.org/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.hattrick.org/*"],
      "js": ["content/content.js"],
      "css": ["content/content.css"]
    }
  ],
  "background": {
    "service_worker": "background/background.js"
  }
}
