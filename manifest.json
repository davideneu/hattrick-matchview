{
  "manifest_version": 3,
  "name": "Hattrick Matchview",
  "version": "1.0.0",
  "description": "A visualization layer for following matches of the online game Hattrick",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "activeTab",
    "identity",
    "storage"
  ],
  "host_permissions": [
    "https://*.hattrick.org/*",
    "https://chpp.hattrick.org/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.hattrick.org/*"],
      "js": [
        "api/chppApiClient.js",
        "content/matchDataExtractor.js",
        "content/fieldVisualization.js",
        "content/matchDataPanel.js",
        "content/content.js"
      ],
      "css": ["content/content.css", "content/fieldVisualization.css"]
    }
  ],
  "background": {
    "service_worker": "background/background.js"
  }
}
